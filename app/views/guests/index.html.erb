<div class="row">
  <div class="col-md-8">
    <div class="table-responsive">
      <table class="table table-bordered table-hover">
        <tr>
          <th>Name</th>
          <th>RSVP</th>
          <th>RSVP Date</th>
          <th>Unique Code</th>
          <th>Actions</th>
        </tr>
        <% @guests.each do |guest| %>
          <tr>
            <td><%= guest.name %></td>
            <td><%= guest.rsvp %></td>
            <td><%= guest.updated_at.strftime("%d/%m/%Y") %></td>
            <td><%= guest.unique_code %></td>
            <td><%= link_to "View", guest_path(guest), class: "btn btn-primary btn-sm"%>
                <%= link_to "Delete", guest_path(guest), method: :delete,
                        data: {confirm: "Are you sure you want to delete this guest?"},
                        class: "btn btn-danger btn-sm"%></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
  <div class="col-md-4">
    <table class="table">
      <tr>
        <td>Total Invited</td>
        <td><%= @guests.count %></td>
      </tr>
      <tr>
        <td>Total Attending</td>
        <td><%= @attending.count %></td>
      </tr>
      <tr>
        <td>Total Not Attending</td>
        <td><%= @not_attending.count %></td>
      </tr>
      <tr>
        <td>Total Awaiting RSVP</td>
        <td><%= @awaiting.count %></td>
      </tr>
    </table>
  </div>
</div>
